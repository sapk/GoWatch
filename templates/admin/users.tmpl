{{template "base/head" .}}
<br><br>
<div class="container" id="admin-users">
<div class="ui grid">
    <div class="four wide column">
		{{template "admin/menu" .}}
	</div>
    <div class="twelve wide column">
<div class="ui raised segment">
		<h3>Users :<a class="ui green button compact right floated" href="/admin/user/add"><i class="add user icon"></i> Add</a></h3>
<div class="ui cards four">
		{{range .Users}}
		<div class="card">
		    <div class="image">
		      <img src="{{.GetGravatar}}">
		    </div>
			<div class="content">
				<div class="header">
				  {{.Username}}
          {{if ne .ID 1 }}
          <a class="ui icon button red right floated small delete-button" href="/admin/user/{{.ID}}/del">
            <span class="text">delete </span><i class="delete icon"></i>
          </a>
          {{end}}
				</div>
				<div class="meta">
			        <a>{{.Roles}}</a>
			    </div>
				<div class="description">
					{{.Email}}
				</div>
			</div>
		</div>
		{{end}}
</div>
</div>

	 </div>
  </div>
</div>
{{template "base/footer" .}}
